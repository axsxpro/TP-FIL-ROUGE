{% extends 'base.html.twig' %}

{% block title %}Profil{% endblock %}

{% block stylesheets %}
    <style>
        .btn-black {
            background-color: #000000;
            color: #E0B973; 
        }

        .btn-custom {
            background-color: #E0B973;
            color: black;
        }

        .btn-black:hover {
            background-color: #333333; 
        }

        .btn-custom:hover {
            background-color: #D8A53E; 
        }


        .conteneur {
            border: solid black;
            margin: 150px;
        }

    </style>

{% endblock %}


{% block body %}

<div class="conteneur">

    {% if app.user %}
        <h1>{{ app.user.nom }} {{ app.user.prenom }}</h1>

        <table class="table">
            <thead>
                <tr>
                    <th>Email</th>
                    <th>Adresse</th>
                    <th>Telephone</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>{{ app.user.email }}</td>
                    <td>{{ app.user.adresse }}</td>
                    <td>{{ app.user.telephone }}</td>
                    <td>
                        <a href="{{ path('app_user_show', {'id': app.user.id}) }}" class="btn btn-black">Show</a>
                        <a href="{{ path('app_user_edit', {'id': app.user.id}) }}" class="btn btn-custom">Edit</a>
                    </td>
                </tr>
            </tbody>
        </table>
    {% endif %}

</div>

{% endblock %}
